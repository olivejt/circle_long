@charset "utf-8";
/* CSS Document */
.hide{display: none}
.cl:after{content: ".";display: block;height: 0px;clear: both;visibility: hidden;}
* html .cl{height: 1%;}/*IE6*/
*:first-child+html .cl{min-height: 1px;}/*IE7*/
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,button,textarea,p,blockquote,th,td,img,table{margin:0;padding:0;}
input { border: 0px;}
img { border:0;}
.lastx{margin-right: 0 !important;border-right: 0 !important;padding-right: 0 !important;}
ol,ul{ list-style:none;}
a { text-decoration: none; font-family: "微软雅黑"}
a:hover,a:visited { color: #333;}
.text_cen { text-align: center;}
.text_l { text-align: left;}
.text_r {text-align: right;}
.mar_cen { margin: 0 auto;}
.fl { float: left;}
.fr { float: right;}
.displayblock { display: block;}
.fwbold { font-weight: bold;}
.fwbolder { font-weight: bolder;}

/*font size*/
.font12 { font-size: 12px;}
.font14 { font-size: 14px;}
.font16 { font-size: 16px;}
.font44 { font-size: 44px;}

/*font color*/
.ff49b00 { color: #f49b00;}/*orange*/
.f999 { color: #999;}/*gray*/
.fa38d00 { color: #a38d00;}/*yellow*/
.fccc { color: #ccc;}/*gray*/
.fwhite { color: white;}

/*background color*/
.bgc1c1c1 { background-color: #c1c1c1;}/*gray*/
.bgccc { background-color: #ccc;}/*gray*/
.bgd8d8d8 { background-color: #d8d8d8;}/*gray*/
.bgffd11b { background-color: #ffd11b;}/*yellow*/
.bgwhite { background-color: white;}

body { font-family: "微软雅黑"; font-size: 12px; color: #333; width: 100%; height: auto; background-color: #f1f1f1;}
.headshow { width: 24px; height: 24px; margin-right: 3px;}/*这个是用户头像的css*/
.usershowpic { width: 300px; height: 300px; margin: 10px 0 10px 0; position: relative;}/*这个是用户问题展示图片的css*/
/*标志*/
.sign { position: absolute; z-index: 999; top: 50px; }
.sign .text { color: white; 
			  filter:alpha(opacity=70);-moz-opacity:0.7;-khtml-opacity: 0.7;opacity: 0.7;
			  background-color: black;
			  padding: 6px 9px 6px 9px;
			  border-radius: 13px;
			}
.sign .circle { width: 6px; height: 6px; border-radius: 6px; background-color: #ffd800; border: 2px solid black; margin: 7px 0 0 3px;}
.moneypic { width: 14px; height: 14px; margin-right: 5px;}/*￥的图片*/
.littleicon { width: 14px; height: 14px; margin-right: 3px;}/*答案，检索，点赞等小图标*/
.arrowicon { width: 7px; height: 12px; margin-left: 3px;}/*箭头图片*/
.emotion { width: 21px; height: 21px; margin-top: 2px;}/*表情*/
.answershow { width: 148px; height: 148px;}/*答案配图*/
.V { width: 12px; height: 12px; margin-left: 2px; margin-top: 2px;}/*V*/
.V2 { width: 10px; height: 10px; margin-left: -13px;}/*小V*/
/*选择衣物*/
.selectclothes { width: 130px; height: 55px; margin-right: 10px; margin-top: 10px;}
.selectclothes:hover { border: 2px solid #ffd800; margin: 8px 8px -2px -2px;}
.clewpic { padding: 30px 0 30px 0;}/*热门线索*/

.footer { width: 100%; height: 47px; background-color: #292929; padding-top: 10px;}
.innerfooter { width: 95%;}
.innerfooter p { margin-left: 5px;}
.logo { width: 35px; height: 35px;}
.download { width: 80px; height: 30px; background-color: #ffd800; border-radius: 5px; line-height: 30px; margin-top: 3px;}